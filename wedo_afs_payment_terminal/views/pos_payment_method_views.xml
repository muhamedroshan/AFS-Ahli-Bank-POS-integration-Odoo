<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_afs" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.afs</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="afs_username" invisible="use_payment_terminal != 'afs'" required="use_payment_terminal == 'afs'"/>
                <field name="afs_fullname" invisible="use_payment_terminal != 'afs'" required="use_payment_terminal == 'afs'"/>
                <field name="afs_mid" invisible="use_payment_terminal != 'afs'" required="use_payment_terminal == 'afs'"/>
                <field name="afs_tid" invisible="use_payment_terminal != 'afs'" required="use_payment_terminal == 'afs'"/>
                <field name="afs_merchant_secure_key" invisible="use_payment_terminal != 'afs'" required="use_payment_terminal == 'afs'"/>
                <field name="afs_is_test_mode" invisible="use_payment_terminal != 'afs'" required="use_payment_terminal == 'afs'"/>
            </xpath>
        </field>
    </record>
</odoo>
